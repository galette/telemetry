/*******************************
         Galette Overrides
*******************************/

nav.top-nav {
  background: @white;
  box-shadow: rgba(0,0,0,0.2) 0px 2px 9px;
  z-index: 2;
  position: relative;
}
nav.top-nav .ui.secondary.menu {
  margin-bottom: 0;
}
@media only screen and (max-width: 509px) {
  nav.top-nav .ui.menu:not(.vertical) .header.item {
    display: none;
  }
}
