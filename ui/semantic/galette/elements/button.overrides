/*******************************
         Galette Overrides
*******************************/

/*----------------------------------------------
     Reset color of simple buttons with icon
-----------------------------------------------*/
a.ui.button i.icon,
a.ui.button:hover i.icon {
  color: inherit;
}

/*-----------------------------------------------------------------
     Darken default primary color (orange) on buttons
------------------------------------------------------------------*/
.ui.primary.button,
.ui.primary.buttons .button {
  color: darken(@textColor, 15);
}
